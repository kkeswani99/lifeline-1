<% include ../partials/header %>

<div class="container">
    <div>
        <h1 style="text-align: center;">Edit <%= accident.name %></h1>
        <div class="container" style="width: 30%; margin: 25px auto;">
            <form action="/accidents/<%= accident._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="accident[name]" value="<%= accident.name %>">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="accident[place]" value="<%=accident.place%>">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="accident[image]" value="<%= accident.image %>">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="accident[description]" value="<%= accident.description %>">    
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!!</button>    
                </div>                
            </form>
             <a href="/accidents">Go Back</a>
        </div>
           
    </div>
</div>

<% include ../partials/footer %>

