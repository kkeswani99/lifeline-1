<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Enter Your Complaint</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/reports" method="POST" enctype="multipart/form-data">
                <!-- location -->
                <div class="form-group" >
                    <input class="form-control" type="text" name="campground[name]" placeholder="location">
                </div>
                <!-- image -->
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
                </div>
                <!-- description -->
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" placeholder="Enter complaints">
                </div>
                <!-- submit -->
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/reports">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>