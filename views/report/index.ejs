<% include ../partials/header %>
<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome To Complaint Section</h1>
      <p>View Complaints</p>
      <p>
        <a class="btn btn-primary btn-large" href="/reports/new">Add New Complaint</a>
      </p>
    </div>
  </header>

  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% Reports.forEach(function(report){ %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%= report.image %>">
        <div class="caption">
          <h4>
            <%= report.name %>
          </h4>
        </div>
        <p>
          <a href="/reports/<%= report._id %>" class="btn btn-primary">More Info</a>
        </p>
      </div>
    </div>
    <% }); %>
  </div>
</div>

<% include ../partials/footer %>